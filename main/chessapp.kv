# main.py
#:kivy 2.0


BoxLayout:
    orientation: 'vertical'

    Button:
        text: ''
        on_release: app.start_new_game()
        size_hint : (0.7, 0.3)
        background_normal : 'ressources/upbutton.png'
        background_down : 'ressources/downbutton.png'
        pos_hint : {'x': 0.15, 'y': 0.01}

    GridLayout:
        id: chessboard
        cols: 8
        rows: 8
        size_hint : (0.9, 0.5)
        pos_hint : {'x': 0.05, 'y': 0.2}

    
    Label:
        id : label 
        text: "C'est aux blancs de jouer"
        size_hint : (0.2, 0.2)
        pos_hint : {'x': 0.40}
        background_normal : ""
        background_color : (1, 0, 0, 0.50)
